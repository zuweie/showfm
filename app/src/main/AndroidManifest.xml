<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zuweie.showfm" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.zuweie.showfm.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.zuweie.showfm.StartupActivity"
            android:label="@string/title_activity_startup" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.zuweie.showfm.PlayingListActivity"
            android:label="@string/title_activity_playing_list" >
        </activity>

        <service
            android:name="com.example.zuweie.showfm.PlayBackService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
