<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/novel_bg"
    tools:context="com.geekfocus.zuweie.showfm.NovelDetailActivity"
    tools:ignore="MergeRootFrame">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/novel_im"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/nj_avatar_im"
        android:layout_marginLeft="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="210dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="变态的小辣椒2"
        android:layout_marginLeft="5dp"
        android:id="@+id/novel_name_tx"
        android:layout_below="@+id/novel_im"
        android:layout_toRightOf="@+id/nj_avatar_im"
        android:layout_toEndOf="@+id/nj_avatar_im"
        android:textColor="#fff7f8ef"
        android:textStyle="bold|normal"
        android:singleLine="false"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="变态小辣椒"
        android:id="@+id/nj_name_tx"
        android:layout_below="@+id/nj_avatar_im"
        android:layout_alignLeft="@+id/nj_avatar_im"
        android:layout_alignStart="@+id/nj_avatar_im"
        android:textSize="12dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/nvl_body_tx"
        android:layout_below="@+id/nj_name_tx"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="#64f9d9c1"
        android:nestedScrollingEnabled="true" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:id="@+id/pl_bt"
        android:layout_marginRight="30dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/pl"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <fragment
        android:id="@+id/novle_detail_adFragment"
        android:name="com.geekfocus.zuweie.showfm.NovelDetailActivity$AdFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
