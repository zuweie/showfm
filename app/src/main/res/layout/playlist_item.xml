<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/playing_item_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/playing_item_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/playing_item_img"
        android:layout_toEndOf="@+id/playing_item_img" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playing_item_progress"
        android:layout_below="@+id/playing_item_title"
        android:layout_toRightOf="@+id/playing_item_img"
        android:layout_toEndOf="@+id/playing_item_img"
        android:visibility="gone"/>


</RelativeLayout>